{
  "name": "stylelint-config-coldfront",
  "version": "1.0.1",
  "description": "Custom stylelint config used for Coldfront projects.",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint --ext .js .",
    "lint:fix": "npx eslint --ext .js . --fix",
    "commit": "npx git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coldfrontlabs/stylelint-config-coldfront.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "author": "Coldfront Labs Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coldfrontlabs/stylelint-config-coldfront/issues"
  },
  "homepage": "https://github.com/coldfrontlabs/stylelint-config-coldfront#readme",
  "dependencies": {
    "stylelint-config-property-sort-order-smacss": "^4.0.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-stylelint": "^11.0.0",
    "husky": "^2.3.0",
    "stylelint": "^10.0.1"
  },
  "peerDependencies": {
    "stylelint": "^8.3.0 || ^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "echo committing as $(git config user.name) && npm run lint"
    }
  }
}
